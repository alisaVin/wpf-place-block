<Window x:Class="place_block_wpf_ares.src.Views.ModaelssWpfDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:place_block_wpf_ares.src.Views"
             mc:Ignorable="d" 
             Height="450" Width="500" 
             MinHeight="300" MinWidth="350"
             Background="WhiteSmoke">

    <Window.CommandBindings>
        <!--Commands-->
    </Window.CommandBindings>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label FontSize="12" HorizontalAlignment="Left">Pfad zur Koordinatenliste (.xlsx)</Label>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="35" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name ="coordPath" Grid.Column="0" Height="25" VerticalAlignment="Top"
                     HorizontalAlignment="Stretch"/>
            <Button Grid.Column="1" Width="25" Height="25" HorizontalAlignment="Right" 
                    Content="..."/>
        </Grid>
        <Grid Grid.Row="2">
            <Label HorizontalAlignment="Left" FontSize="12">Pfad zur Blockdatei (.dwg)</Label>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="35" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name ="blockPath" Grid.Column="0" Height="25" VerticalAlignment="Top"
                     HorizontalAlignment="Stretch"/>
            <Button Grid.Column="1" Width="25" Height="25" HorizontalAlignment="Right" 
                    Content="..."/>
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" HorizontalAlignment="Left" FontSize="12">Blockname</Label>
            <Label Grid.Column="1" HorizontalAlignment="Left" FontSize="12">Geschoss</Label>
        </Grid>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name ="blockName" Grid.Column="0" Height="25" Margin="0,0,5,0" VerticalAlignment="Top"
                     HorizontalAlignment="Stretch"/>
            <TextBox x:Name ="etageInput" Grid.Column="1" Height="25" Margin="5,0,0,0" VerticalAlignment="Top"
         HorizontalAlignment="Stretch"/>
        </Grid>
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Width="75" Height="25" HorizontalAlignment="Right" 
                    VerticalAlignment="Center" Content="Abbrechen"/>
            <Button Grid.Column="2" Width="75" Height="25" HorizontalAlignment="Right" 
                    VerticalAlignment="Center" Content="Einfügen"/>
        </Grid>
        <Grid Grid.Row="7">
            <ProgressBar Height="20"
                         HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="8">
            <RichTextBox x:Name="richTextBox"/>
        </Grid>
    </Grid>
</Window>
